	month = jan,
	year = {1995},
	note = {ADS Bibcode: 1995ApJ...438..322W},
	keywords = {/unread, Astrophysics, Correlation, Cosmic Rays, Data Processing, Flux Density, Gamma Ray Astronomy, Gamma Ray Spectrometers, GAMMA RAYS: GENERAL, Least Squares Method, Linear Equations, NUMERICAL METHODS, Poisson Equation},
	pages = {322},
	file = {Full Text PDF:/Users/lx21966/Zotero/storage/ZWV4PFIH/Wheaton et al. - 1995 - Multiparameter Linear Least-Squares Fitting to Poi.pdf:application/pdf},
