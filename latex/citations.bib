	author = {Kohler, Susanna},
	month = jul,
	year = {2021},
	note = {ADS Bibcode: 2021nova.pres.8104K},
	keywords = {accretion disks, black holes, Features, high energy, Highlights, X-ray binaries, X-rays},
	pages = {8104},
}

